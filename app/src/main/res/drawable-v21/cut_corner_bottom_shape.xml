<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item android:gravity="top">
        <layer-list>

            <item android:gravity="top" android:left="@dimen/bottom_shape_hight" android:right="@dimen/bottom_shape_hight" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary1"/>
                    <size android:height="@dimen/bottom_shape_hight"/>

                </shape>
            </item>





            <item android:right="@dimen/bottom_shape_hight" android:gravity="top" >

                <rotate
                    android:fromDegrees="-135"
                    android:pivotX="97%"
                    android:pivotY="47%">
                    <layer-list>
                        <item>
                            <shape android:shape="rectangle">
                                <size android:height="@dimen/bottom_shape_hight" />
                                <solid android:color="@color/colorPrimary1" />
                            </shape>
                        </item>

                    </layer-list>
                </rotate>
            </item>
            <item android:gravity="top" android:left="@dimen/bottom_shape_hight">

                <rotate
                    android:fromDegrees="135"
                    android:pivotX="3%"
                    android:pivotY="47%">
                    <layer-list>
                        <item >
                            <shape android:shape="rectangle">
                                <size android:height="@dimen/bottom_shape_hight" />
                                <solid android:color="@color/colorPrimary1" />
                            </shape>
                        </item>

                    </layer-list>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>