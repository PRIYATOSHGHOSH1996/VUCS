<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <item>
        <ripple android:color="#8AA4E9">
            <item>


            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <size android:height="10dp"
                    android:width="50dp"/>
                
            </shape>
            </item>
        </ripple>

    </item>
    <item android:gravity="top">
        <shape>
            <size android:height="10dp" />
            <gradient
                android:angle="270"
                android:endColor="#00FFFFFF"
                android:startColor="#336D6D6D"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="98%"
            android:pivotY="90%">

            <layer-list>
                <item android:bottom="10dp">
                    <shape android:shape="rectangle">

                        <solid android:color="@android:color/transparent" />
                    </shape>
                </item>
                <item android:gravity="bottom">
                    <shape>
                        <size android:height="10dp" />
                        <gradient
                            android:angle="270"
                            android:endColor="#00FFFFFF"
                            android:startColor="#336D6D6D"
                            android:type="linear" />
                    </shape>
                </item>
            </layer-list>

        </rotate>
    </item>
    <item>

        <rotate
            android:fromDegrees="-45"
            android:pivotX="2%"
            android:pivotY="90%">
            <layer-list>
                <item android:bottom="10dp">
                    <shape android:shape="rectangle">

                        <solid android:color="@android:color/transparent" />
                    </shape>
                </item>
                <item android:gravity="bottom">
                    <shape>
                        <size android:height="10dp" />
                        <gradient
                            android:angle="270"
                            android:endColor="#00FFFFFF"
                            android:startColor="#336D6D6D"
                            android:type="linear" />
                    </shape>
                </item>
            </layer-list>
        </rotate>
    </item>
</layer-list>