<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item android:gravity="top">
        <layer-list>

            <item android:gravity="top" android:left="40dp" android:right="40dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary1"/>
                    <size android:height="40dp"/>

                </shape>
            </item>




            <item android:gravity="top" >
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="86%"
                    android:pivotY="90%">

                    <layer-list>
                        <item android:bottom="10dp">
                            <shape android:shape="rectangle">
                                <size android:height="40dp" />
                                <solid android:color="@color/colorPrimary1"/>

                            </shape>
                        </item>

                    </layer-list>

                </rotate>
            </item>
            <item>

                <rotate
                    android:fromDegrees="-45"
                    android:pivotX="14%"
                    android:pivotY="90%">
                    <layer-list>
                        <item android:bottom="10dp">
                            <shape android:shape="rectangle">
                                <size android:height="40dp" />
                                <solid android:color="@color/colorPrimary1" />
                            </shape>
                        </item>

                    </layer-list>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>