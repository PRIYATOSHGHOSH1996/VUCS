<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item android:gravity="top">
        <layer-list>
<item>
    <ripple android:color="@color/ripple_color">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/white"></solid>
                <size android:height="200dp"></size>
            </shape>
        </item>
    </ripple>
</item>


            <item android:gravity="top" android:right="@dimen/bottom_shape_hight" android:left="@dimen/bottom_shape_hight">
                <shape>
                    <size android:height="10dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="#00FFFFFF"
                        android:startColor="#336D6D6D"
                        android:type="linear" />
                </shape>
            </item>
            <item  android:right="@dimen/bottom_shape_hight">
                <rotate
                    android:fromDegrees="-135"
                    android:pivotX="100%"
                    android:pivotY="0%">

                    <layer-list>
                        <item>
                            <shape android:shape="rectangle">
                                <size android:height="@dimen/bottom_shape_hight"/>
                                <solid android:color="@color/white" />
                            </shape>
                        </item>
                        <item android:gravity="top" android:top="-10dp" android:right="-10dp">
                            <shape>
                                <size android:height="10dp" />
                                <gradient
                                    android:angle="90"
                                    android:endColor="#00FFFFFF"
                                    android:startColor="#336D6D6D"
                                    android:type="linear" />
                            </shape>
                        </item>
                    </layer-list>

                </rotate>
            </item>
            <item android:left="@dimen/bottom_shape_hight">

                <rotate
                    android:fromDegrees="135"
                    android:pivotX="0%"
                    android:pivotY="0%">
                    <layer-list>
                        <item>
                            <shape android:shape="rectangle">
                                <size android:height="@dimen/bottom_shape_hight"/>
                                <solid android:color="@color/white" />
                            </shape>
                        </item>
                        <item android:gravity="top" android:top="-10dp" android:left="-10dp">
                            <shape>
                                <size android:height="10dp" />
                                <gradient
                                    android:angle="90"
                                    android:endColor="#00FFFFFF"
                                    android:startColor="#336D6D6D"
                                    android:type="linear" />
                            </shape>
                        </item>
                    </layer-list>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>