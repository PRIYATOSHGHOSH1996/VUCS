<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="100dp"

    android:background="@drawable/cut_corner_white_shape"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="34dp"
            android:paddingEnd="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/blog_image"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/double_ring"
                    android:visibility="gone"
                    android:transitionName="@string/item_image_url"
                     />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/image"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                >

                <TextView
                    android:id="@+id/blog_title"
                    style="@style/my_text_style_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingEnd="12dp"
                    android:text="this blog is seted by me for hh testing"
                    android:transitionName="@string/item_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/blog_by"
                        style="@style/my_text_style_caption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:text="rfuigrfhgfghhfffffffffffffffffffffffffffffffffffhhhhhhhhhhhhhf"
                        android:transitionName="@string/item_by" />

                    <TextView
                        android:id="@+id/blog_date"
                        style="@style/my_text_style_caption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="bottom|right"
                        android:singleLine="true"
                        android:text="djfhegf"
                        android:transitionName="@string/item_date" />

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

