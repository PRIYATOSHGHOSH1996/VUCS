<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingStart="28dp"
    android:id="@+id/parent"
    android:transitionName="parent"
    android:background="@drawable/cut_corner_white_shape"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/job_title"
                style="@style/my_text_style_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="24dp"
                android:text="this blog is seted by me for test"
                android:transitionName="@string/item_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingEnd="8dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_by"
                    style="@style/my_text_style_caption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="rfuigrfhgfghhfffffffffffffffffffffffffffffffffffhhhhhhhhhhhhhf"
                    android:transitionName="@string/item_by" />

                <TextView
                    android:id="@+id/job_date"
                    style="@style/my_text_style_caption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom|right"
                    android:singleLine="true"
                    android:text="djfhegf"
                    android:transitionName="@string/item_date" />

            </LinearLayout>
            <ImageButton
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="-30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete_white_24dp"
                android:tint="@color/red_to_green_0"
                android:visibility="gone"/>


        </RelativeLayout>
    </RelativeLayout>
