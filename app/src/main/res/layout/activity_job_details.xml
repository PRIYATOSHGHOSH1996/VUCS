<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.JobDetailsActivity">

    <include layout="@layout/app_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/item_title"
                style="@style/my_text_style_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This blog is setettttttttttttttttttttttttttttttttttttttttttttd by me"
                android:transitionName="@string/item_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_by"
                    style="@style/my_text_style_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="bottom"
                    android:text="hgc"
                    android:transitionName="@string/item_by" />

                <TextView
                    android:id="@+id/item_date"
                    style="@style/my_text_style_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom|right"
                    android:text="hgchgvyfhjgj"
                    android:transitionName="@string/item_date" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/file_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/item_content"
                style="@style/my_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="weuhsaefaigdfsafgs9fgeuf"
                android:textColor="#000"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>