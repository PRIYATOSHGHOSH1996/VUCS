<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:elevation="0dp">


    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/notice_title"
            style="@style/my_text_style_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="this blog is seted by me for tgfhfghfgnfgnfgnfgngfngngnghnghnghnnhgngesting"
            android:transitionName="@string/item_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/notice_by"
                    style="@style/my_text_style_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:singleLine="true"
                    android:text="fffffdtttttttttttttgf"
                    android:transitionName="@string/item_date" />

                <TextView
                    android:id="@+id/notice_date"
                    style="@style/my_text_style_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:minWidth="30dp"
                    android:singleLine="true"
                    android:text="djfhedewfdddddgf"
                    android:transitionName="@string/item_date" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/notice_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/login_button_background"
                android:gravity="bottom"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:src="@drawable/download_icon"
                android:tint="@color/white"
                android:transitionName="@string/item_image_url" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>