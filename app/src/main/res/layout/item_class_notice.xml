<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_shadow_background"
    android:paddingLeft="18dp"
    android:paddingTop="8dp"
    android:paddingRight="18dp"
    android:paddingBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/notice_title"
            style="@style/my_text_style_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="this blog is seted by me for testing"
            android:transitionName="@string/item_title" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/notice_title"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notice_by"
                style="@style/my_text_style_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="rfuigrdddddddddddddddy" />

            <TextView
                android:id="@+id/notice_date"
                style="@style/my_text_style_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="right"
                android:singleLine="true"
                android:text="April 23, 2019"
                android:transitionName="@string/item_date" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_layout"
            android:gravity="end"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:indeterminate="true"
                android:layout_gravity="start"
                android:indeterminateDrawable="@drawable/circlular_progress"
                android:progressDrawable="@drawable/circlular_progress"
                />
            <ImageButton
                android:id="@+id/download"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/button_background_square"
                android:src="@drawable/download_icon"
                android:tint="@color/white"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>

