<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent"
    tools:context=".activity.AddClassNoticeActivity">
    <include layout="@layout/app_bar_main"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginTop="16dp">



            <Spinner
                android:layout_weight="5"
                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:entries="@array/category_name"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true" />
            <Spinner
                android:layout_weight="5"
                android:id="@+id/sem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:entries="@array/semesters"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="invisible"
                android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/box_shadow1"
                        android:textColor="@color/colorPrimary1"
                        android:padding="@dimen/padding_sm"
                        android:maxLines="1"
                        android:text="Select File"
                        android:textStyle="italic"
                        android:onClick="addFile"
                        style="@style/TextAppearance.MaterialComponents.Caption"/>
                    <Button
                        android:id="@+id/delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box_shadow1"
                        android:textColor="@color/colorPrimary1"
                        android:padding="@dimen/padding_sm"
                        android:maxLines="1"
                        android:text="Delete"
                        android:onClick="deleteFile"
                        android:textStyle="italic"
                        style="@style/TextAppearance.MaterialComponents.Caption"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/show_file"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:onClick="onImageClick"
                    android:background="@drawable/box_shadow1"
                    android:padding="@dimen/padding_sm"
                    android:transitionName="image"
                    android:visibility="visible"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:minHeight="60dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Message"
                    android:padding="8dp"
                    android:minHeight="50dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/submit"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_background_square"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Send"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>